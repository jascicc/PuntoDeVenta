@model IEnumerable<PuntoDeVenta.Models.Category>

@{
    ViewBag.Title = "Categorías";
}

<h2>Categorías</h2>

<p>
    @Html.ActionLink("Agregar Categoría", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.CategoryId })">
                    <i class="fa fa-pencil"></i>
                    <span>Editar </span>
                </a>
                |
                @*@Html.ActionLink("Editar", "Edit", new { id = item.CategoryId }) |*@
                @*@Html.ActionLink("Eliminar", "Delete", new { id = item.CategoryId })*@
                <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="text-danger">
                    <i class="fa fa-times"></i>
                    <span>Eliminar </span>
                </a>
            </td>
        </tr>
    }

</table>

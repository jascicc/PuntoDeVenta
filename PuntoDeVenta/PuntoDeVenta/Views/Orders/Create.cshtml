@model PuntoDeVenta.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orden</title>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

</head>
<body>
    <div>
        <div id="sidebar">
            <ul class="sidebar-nav">
                @foreach (PuntoDeVenta.Models.Category item in ViewBag.categories)
                {
                    <li>
                        <input class="category" value="@item.CategoryName" onclick="display('@item.CategoryId')" type="button">
                    </li>
                }
                <li style="padding-top:20px;">
                    @Html.ActionLink("Pendientes", "List")
                </li>
            </ul>
        </div>

        <div class="products">
            @foreach (PuntoDeVenta.Models.Product product in ViewBag.products)
            {
                PuntoDeVenta.Models.Order order = new PuntoDeVenta.Models.Order();
                order.Product = product;
                //list.Add(order);
                <form class="card" name="@product.CategoryId" id="product @product.ProductID" method="post" action="/Orders/Create">
                    @Html.AntiForgeryToken()
                    <div class="noDisplay">
                            @* falta traerse desde antes el id de la mesa*@
                            <input type="number" name="TableId" value="3" />

                            <input type="number" name="ProductID" value="@product.ProductID" />

                            <input type="text" name="Active" value="por pagar" />

                            <input type="number" id="@product.ProductID" name="Quantity" value="1" class="badge @product.ProductID" />
                    </div>
                    <div class="card-img-top">
                        <center><img class="card-img-top" src="~/Content/Tacos.jpg"></center>
                        <input class="mybtn add" value="+" onclick="add('@product.ProductID')" type="button">
                        <input class="mybtn remove" value="-" onclick="removeItem('@product.ProductID')" type="button">
                    </div>
                    <input class="btn-submit" type="submit" value="" />

                    <h2 class="title" id="title @product.ProductID">@product.ProductName</h2>

                    <span class="myBadge" id="mybadge @product.ProductID">
                        <label id="lbl @product.ProductID">1</label>
                    </span>
                </form>
            }
        </div>
        <div class="icon">
            <i class="fa fa-shopping-cart" data-toggle="modal" data-target="#myModal"></i>
            <span class="myBadge bdg2"></span>
        </div>

    </div>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h3 class="modal-title">Productos en la orden</h3>

                </div>
                <div class="modal-body">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Product.ProductName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>

                        </tr>

                        @*@foreach (var item in list)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                            </tr>
                        }*@
                    </table>

                </div>
                <div class="modal-footer">
                    <form action="Orders/CreateOrder" method="post">
                        <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                        @*<input type="submit" value="Submit" class="btn btn-success" id="btnSubmit" />*@
                        @*@Html.ActionLink("Enviar", "CreateOrder", new { orders = list }, new { @class = "btn btn-success" })*@
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    function display(category) {
        var all = document.getElementsByClassName('card');
        for (var i = 0; i < all.length; i++) {
            all[i].style.display = "none";
        }
        var coll = document.getElementsByName(category);
        for (var i = 0; i < coll.length; i++) {
            coll[i].style.display = "inline-grid";
        }
    }

    function add(id) {
        var input = document.getElementById(id);
        var val = parseInt(input.value) + 1;
        input.value = val;
        //hace que se mueva el card
        if (val > 1) {
            var badge = document.getElementById("mybadge " + id);
            badge.style.display = "flex";
        }
        document.getElementById("lbl " + id).innerHTML = val;
    }

    function removeItem(id) {
        var input = document.getElementById(id);
        var val = parseInt(input.value);
        if (val > 1) {
            input.value = val - 1;
            document.getElementById("lbl " + id).innerHTML = val - 1;
            if (val == 2) {
                var badge = document.getElementById("mybadge " + id);
                badge.style.display = "none";
            }
        }

    }
</script>


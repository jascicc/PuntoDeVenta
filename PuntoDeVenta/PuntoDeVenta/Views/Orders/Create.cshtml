@model PuntoDeVenta.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div>
        @* esto puede suplirse por un nav sticky con smooth scroll y seccionar platillos o modales *@
        <div id="sidebar">
            <ul class="sidebar-nav">
                <li>
                    @Html.ActionLink("Todos", "Create", new { id = 0 })
                </li>
                @foreach (PuntoDeVenta.Models.Category item in ViewBag.categories)
                {
                    <li>
                        @Html.ActionLink(item.CategoryName, "Create", new { id = item.CategoryId })
                    </li>
                }
                <li>
                    @Html.ActionLink("Pendientes", "List")
                </li>
            </ul>
        </div>

        @*<i class="fa fa-shopping-cart"></i>*@



        <div class="products">
            @foreach (var item in ViewBag.products)
            {
                // falta ajustar el form al tamaño de la carta
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                      <div class="form-horizontal">
                            <div class="card" type="submit" value="">
                            <center><img class="card-img-top" src="~/Content/Tacos.jpg"></center>
                            <h2 class="title">@item.ProductName</h2>

                            <div class="noDisplay">
                                <div class="form-group">
                                    @* falta traerse desde antes el id de la mesa *@
                                    <input type="number" name="TableId" value="3" />
                                </div>

                                <div class="form-group">
                                    <input type="number" name="ProductID" value="@item.ProductID" />
                                </div>

                                <div class="form-group">
                                    <input type="text" name="Active" value="por pagar" />
                                </div>

                                <div class="form-group">
                                    @* falta boton para aumentar la cantidad *@
                                    <input type="number" name="Quantity" value="1" />
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="submit" />
                            </div>
                        </div>
                     </div>
                 }
             }
         </div>
                @*<div class="icon">
                    <i class="glyphicon glyphicon-shopping-cart" />
                    <span class="badge">0</span>
                    </div>*@
            </div>
        </body>
    </html>


    <style scoped>
        .noDisplay{
            display: none;
        }
        form {
            width: 20rem !important;
        }
        .form-horizontal {
            width:20rem !important;
        }
        .icon {
            font-size: 8rem;
            position: absolute;
            top: 0px;
            right: 3rem;
            -webkit-transform: scaleX(-1);
            height: 10rem;
            width: 10rem;
        }

        span {
            border-radius: 100% !important;
            height: 25px;
            width: 25px;
            position: absolute;
            top: 0px;
            left: 15px;
            background-color: rgb(0, 180, 255) !important;
        }

        i {
            position: absolute;
            top: 2rem;
            right: 5px;
        }

        .title {
            margin-bottom: 5%;
            padding-left: 15px;
            color: rgb(0, 0, 255);
            font-weight: 400;
            font-size: 2rem;
        }

        .card-img-top {
            margin-top: 0px;
            width: 100%;
            height: 100%;
            border-radius: 10px 10px 0px 0px;
        }

        .products {
            position: absolute;
            left: 15%;
            width: 85%;
        }

        .card {
            width: 28rem;
            height: 25rem;
            display: inline-grid;
            margin: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.4);
        }

            .card:hover {
                box-shadow: 0px 0px 30px rgba(0, 0, 0, 0.9);
            }

            .card:active {
                box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.3);
            }


        body {
            padding: 0px !important;
            margin: 0px !important;
        }

        #sidebar {
            z-index: 1000;
            position: fixed;
            width: 15%;
            height: 100%;
            margin-top: 0px;
            background: rgb(31, 31, 31);
        }

        .sidebar-nav {
            position: absolute;
            top: 0;
            width: 100%;
            margin: 0;
            padding: 0;
            list-style: none;
        }

            .sidebar-nav li {
                text-indent: 5px;
                line-height: 40px;
            }

                .sidebar-nav li a {
                    display: block;
                    text-decoration: none;
                    color: #999999;
                    font-size: 150%;
                }

                    .sidebar-nav li a:hover {
                        text-decoration: none;
                        color: #fff;
                        background: rgba(255, 255, 255, 0.2);
                    }

                    .sidebar-nav li a:active, .sidebar-nav li a:focus {
                        text-decoration: none;
                    }

        @@media screen and (max-width: 954px) {
        }
    </style>